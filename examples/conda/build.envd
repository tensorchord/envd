def build():
    base(os="ubuntu20.04", language="python3.8")   # 声明基础镜像和conda的python版本
    install.conda_packages(name = [
        "pytorch",
    ],env_file="env.yaml")

    install.python_packages(name = [
        "flask"
    ])
    install.system_packages(name = [
        "libgl1-mesa-glx",
        "openmim"
    ])
    run(commands=[
    "mim install mmcv-full",
    "mim install mmdet==2.24.0",
    ])
